<Page x:Class="Projekt.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750"
      d:DesignWidth="820"
      Background="White"
      Title="RegisterPage">

    <Grid>

        <StackPanel Width="600"
                    Height="650"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

            <StackPanel Width="500">

                <TextBlock x:Name="RegisterTitle_textblock" 
                           Text="Utwórz konto"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="50"/>

                <Image Source="/Images/big_avatar.png"
                       Stretch="None"
                       Margin="0,40,0,40"/>

                <!-- Login -->
                <StackPanel Width="300">

                    <TextBlock Text="Login"
                               VerticalAlignment="Center"
                               FontSize="30"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <TextBox x:Name="Login_textbox"
                                 Padding="10"
                                 Text="jkowalski90"
                                 FontSize="20"
                                 Width="250"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Foreground="#777777"
                                 Background="Transparent"/>

                        <Image Source="/Images/avatar.png"
                               Stretch="None"/>

                    </StackPanel>

                    <Border BorderBrush="Black"
                            BorderThickness="0.5"/>

                </StackPanel>

                <!-- Password -->
                <StackPanel Width="300"
                            Margin="0,50,0,0">

                    <TextBlock Text="Hasło"
                           VerticalAlignment="Center"
                           FontSize="30"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <PasswordBox x:Name="Password_textbox"
                                     Padding="10"
                                     FontSize="20"
                                     Width="250"
                                     VerticalAlignment="Center"
                                     BorderThickness="0"
                                     Foreground="#777777"
                                     Background="Transparent"/>

                        <Image Source="/Images/lock.png"
                               Stretch="None"/>

                    </StackPanel>

                    <Border BorderBrush="Black"
                            BorderThickness="0.5"/>

                </StackPanel>

                <!-- Confirm Password -->
                <StackPanel Width="300"
                            Margin="0,50,0,0">

                    <TextBlock Text="Powtórz hasło"
                           VerticalAlignment="Center"
                           FontSize="30"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">

                        <PasswordBox x:Name="ConfirmPassword_textbox"
                                     Padding="10"
                                     FontSize="20"
                                     Width="250"
                                     VerticalAlignment="Center"
                                     BorderThickness="0"
                                     Foreground="#777777"
                                     Background="Transparent"/>

                        <Image Source="/Images/lock.png"
                               Stretch="None"/>

                    </StackPanel>

                    <Border BorderBrush="Black"
                            BorderThickness="0.5"/>

                </StackPanel>

            </StackPanel>

            <!-- Next button -->
            <StackPanel Width="100"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button x:Name="Next_button"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Margin="16"
                        Click="Next_button_Click"
                        Padding="0">

                    <Image  Source="/Images/next.png"
                            Stretch="None"/>

                </Button>

            </StackPanel>

        </StackPanel>

    </Grid>
    
</Page>
